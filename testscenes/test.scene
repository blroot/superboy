size 640 480
output testscene.png

camera 0 0 4 0 0 0 0 1 0 45

maxdepth 5

point 1 1 3 1 1 1

ambient 0 0 0
specular 0 0 0
shininess 70
emission 0 0 0

# We define some vertices
vertex -1 -1 -1
vertex +1 -1 -1 
vertex +1 +1 -1 
vertex -1 +1 -1 
vertex -1 -1 +1
vertex +1 -1 +1 
vertex +1 +1 +1
vertex -1 +1 +1

# Next we define a box
diffuse 0 0.2 0 
specular 0 1 0 
pushTransform 
translate -0.4 0 0.5
scale 0.5 0.5 0.5
rotate 0 1 1 45
tri 0 1 5 
tri 0 5 4 
tri 3 7 6
tri 3 6 2
tri 1 2 6
tri 1 6 5 
tri 0 7 3 
tri 0 4 7 
tri 0 3 2 
tri 0 2 1
tri 4 5 6 
tri 4 6 7 
popTransform

# Define a sphere
specular 0 0 0.8
diffuse 0.2 0.2 0.5
pushTransform 
translate 0.7 0.3 1
scale 0.5 0.5 0.5
sphere 0 0 0 0.7
popTransform

# Lastly, define an ellipsoid (non uniform transformed sphere)
specular 0.8 0 0
diffuse 0.5 0 0
pushTransform 
translate  0 -0.5 1
scale 1.0 0.5 0.5
sphere 0 0 0 0.7
popTransform
